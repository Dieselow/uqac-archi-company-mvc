@model IEnumerable<archi_company_mvc.Models.Consumable>

@{
    ViewData["Title"] = "Consumables";
}

<h1>Consumables</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<vc:search-bar properties="@ViewBag.Attributes" search-string="@ViewBag.Search"></vc:search-bar>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treshold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumableType.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsumableType.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treshold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumableType.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumableType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
