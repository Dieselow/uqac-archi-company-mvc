@model archi_company_mvc.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd></dd>
    </dl>
    @if (Model.Equipments.Count > 0)
    {
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Equipments)
            </dt>
        </dl>
    }

    @foreach (Equipment item in Model.Equipments)
    {
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayFor(model => item.EquipmentType.Name)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => item.InstallationDate)
            </dd>
            <dd class = "col-sm-5">
                <a asp-controller="Equipments" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
